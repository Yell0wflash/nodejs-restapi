<div class="row justify-content-md-center" style="margin-top: 70px">
    <div class="col-md-5">

        <form method="POST" action="/users/login">
            <div class="form-group">
                <label for="nameInput">Userame</label>
                <input name="username" type="text" class="form-control" id="nameInput" placeholder="Enter Username" required>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
            </div>
            <div class="form-group">
                <%- recaptcha %>
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
        </form>
        <div>
            <p> </p>
            <p>Create an Account!</p>
            <a class="btn btn-dark" href="/users/register">Register</a>
        </div>
    </div>
</div>